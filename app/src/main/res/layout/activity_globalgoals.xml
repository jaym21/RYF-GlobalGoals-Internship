<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GlobalGoals">

    <ScrollView
        android:id="@+id/scGoals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#E53935">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvGoalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Goal 1: No Poverty"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:id="@+id/tvDes1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Eradicating poverty in all its forms remains one of the greatest challenges facing humanity. While the number of people living in extreme poverty dropped by more than half between 1990 and 2015, too many are still struggling for the most basic human needs."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvDes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="As of 2015, about 736 million people still lived on less than US$1.90 a day; many lack food, clean drinking water and sanitation. Rapid growth in countries such as China and India has lifted millions out of poverty, but progress has been uneven. Women are more likely to be poor than men because they have less paid work, education, and own less property."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:id="@+id/tvDes3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Progress has also been limited in other regions, such as South Asia and sub-Saharan Africa, which account for 80 percent of those living in extreme poverty. New threats brought on by climate change, conflict and food insecurity, mean even more work is needed to bring people out of poverty."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:id="@+id/tvDes4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="The SDGs are a bold commitment to finish what we started, and end poverty in all forms and dimensions by 2030. This involves targeting the most vulnerable, increasing basic resources and services, and supporting communities affected by conflict and climate-related disasters."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Facts and Figures"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFactHead1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="736 million"
                            android:textSize="25sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvFactDes1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            tools:text="736 million people still live in extreme poverty."
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFactHead2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="10%"
                            android:textSize="25sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvFactDes2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            tools:text="10 percent of the worldâ€™s population live in extreme poverty, down from 36 percent in 1990."
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFactHead3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="1.3 billion"
                        android:textSize="25sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvFactDes3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Some 1.3 billion people live in multidimensional poverty."
                        android:textSize="15sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFactHead4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="50%"
                        android:textSize="25sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvFactDes4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Half of all people living in poverty are under 18."
                        android:textSize="15sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFactHead5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="1 in 10"
                        android:textSize="25sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvFactDes5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="One person in every 10 is extremely poor."
                        android:textSize="15sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFactHead6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="80%"
                        android:textSize="25sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvFactDes6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="80 percent of people living on less than $1.90 are in South Asia and sub-Saharan Africa."
                        android:textSize="15sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>